particle_system TrackDust2
{
    	material        	Dust
    	particle_width  	0.4
    	particle_height 	0.4
    	cull_each       	false
    	quota           	500
    	billboard_type  	point
		sorted				false
		local_space			false
		
    
    	// Area emitter
    	emitter Point
    	{
			width 4
			height 4
			depth 0.1

			angle               		11
        	emission_rate       		19
        	time_to_live        		0.5
        	direction           		0 1 0
        	velocity_min        		0.02
        	velocity_max        		0.1
        	position 0 -0.5 -1.0
        	//position 0 -0.5 0.0
    	
	}

	#affector ColourImage
	#{
	#	image		dustcolors.png
	#}

   	affector Rotator
   	{
        	rotation_range_start  		0
        	rotation_range_end   	 	360
        	rotation_speed_range_start  	-1
        	rotation_speed_range_end    	2
   	}

   	affector Scaler
   	{
       	rate 	2
   	}
   	
   	affector DirectionRandomiser 
   	{
   	keep_velocity true
   	}
   	
