particle_system TrackDust
{
	quota	100
	material	Dust
	//material	Particles/Smoke4
	particle_width	0.1
	particle_height	0.1
	cull_each	false
	renderer	billboard
	sorted	false
	local_space	false
	iteration_interval	0
	nonvisible_update_timeout	0
	billboard_type	point
	billboard_origin	center
	billboard_rotation_type	texcoord
