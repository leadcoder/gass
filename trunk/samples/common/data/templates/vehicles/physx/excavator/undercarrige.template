					<LocationComponent>
						<Position value="1 0.422 1.3"/>
						<AttachToParent value="false"/>
					</LocationComponent>
					<MeshComponent>
						<Filename value="ExLWheel.ive"/>
						<CastShadow value="1"/>
					</MeshComponent>
					<PhysXWheelComponent/>
