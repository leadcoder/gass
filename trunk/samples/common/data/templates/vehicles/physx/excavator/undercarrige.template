					<LocationComponent>
						<Position value="-1 0.422 -1.2"/>
						<AttachToParent value="false"/>
					</LocationComponent>
					<MeshComponent>
						<Filename value="ExRWheel.ive"/>
						<CastShadow value="1"/>
					</MeshComponent>
					<PhysXWheelComponent/>
					<PhysicsConvexGeometryComponent/>
				</Components>
			</SceneObjectTemplate>
			<SceneObjectTemplate>
				<Name value="LiebherrWheel"/>
				<ID value="REAR_LEFT_WHEEL"/>
