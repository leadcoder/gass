<?xml version="1.0" encoding="UTF-8"?>
<Templates>
	<SceneObjectTemplate>
		<Name value="Liebherr"/>
		<ID value="UNDERCARRIAGE"/>
		<Components>
			<LocationComponent>
				<AttachToParent value="0"/>
			</LocationComponent>
			<MeshComponent>
				<Filename value="ExUndercarriage.ive"/>
				<CastShadow value="1"/>
			</MeshComponent>
			<PhysXVehicleComponent>
			    <!--<Mass value="20"/>-->
				<UseAutoReverse value="true"/>
