					</LocationComponent>
					<MeshComponent>
						<Filename value="ExRWheel.ive"/>
						<CastShadow value="1"/>
					</MeshComponent>
					<PhysXWheelComponent/>
					<PhysicsConvexGeometryComponent/>
				</Components>
			</SceneObjectTemplate>
			<SceneObjectTemplate>
				<Name value="WheeledLibherrHouse"/>
				<Inheritance value="LibherrHouse"/>  <!-- house is defined in other file-->
				<ID value="HOUSE"/>
				<Components>
					<LocationComponent>
						<Position value="0 1.2 0"/>
						<AttachToParent value="false"/>
					</LocationComponent>
				</Components>
			</SceneObjectTemplate>
		</ComponentContainers>
	</SceneObjectTemplate>
