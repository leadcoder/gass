material MuddyRoadWithTracks : DiffuseTemplate
{ 
	technique light
	{ 
		pass 
		{ 
			scene_blend alpha_blend
			depth_write off
			depth_bias	4 4
			ambient 1 1 1 0.5 
			diffuse 1 1 1 0.5  

			texture_unit diffuse_map
			{ 
				texture muddy_road_with_tracks.dds
